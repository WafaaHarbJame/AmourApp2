<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/black</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--        <item name="android:fitsSystemWindows">true</item>-->
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>


    </style>

    <style name="FastTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/fastq_color</item>
        <item name="colorPrimaryDark">@color/fastq_color</item>
        <item name="colorAccent">@color/black</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--        <item name="android:fitsSystemWindows">true</item>-->
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>


    </style>

    <style name="RatingBarStyle" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/gray6</item>
        <item name="colorControlActivated">@color/green</item>
    </style>

    <style name="WhiteFillTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="android:background">@drawable/round_corner_gray_border_fill</item>
        <item name="boxBackgroundMode">none</item>
        <item name="hintTextColor">@color/colorTextHint</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/round_corner_big</item>
        <item name="boxCornerRadiusBottomStart">@dimen/round_corner_big</item>
        <item name="boxCornerRadiusTopEnd">@dimen/round_corner_big</item>
        <item name="boxCornerRadiusTopStart">@dimen/round_corner_big</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="hintTextAppearance">@style/hintTextColor</item>

    </style>


    <style name="hintTextColor" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="RatingBarStyle2" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/gray13</item>
        <item name="colorControlActivated">@color/green1</item>
    </style>


    <style name="RatingBarStyle_new" parent="@android:style/Widget.RatingBar">
        <!--        <item name="android:theme">@style/Widget.AppCompat.RatingBar.Small</item>-->
        <item name="android:minHeight">@dimen/_1sdp</item>
        <item name="android:minWidth">@dimen/_20sdp</item>
        <item name="android:progressDrawable">@drawable/rating_style</item>
    </style>

    <style name="editTextStyle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_15sdp</item>
        <item name="android:paddingBottom">@dimen/_15sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="editTextStyle1">
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">@dimen/_2sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <!--        <item name="android:minHeight">@dimen/_40sdp</item>-->
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColorHint">@color/gray6</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">viewStart</item>


    </style>


    <style name="checkBoxStyle" parent="Theme.AppCompat.DayNight">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/gray6</item>
    </style>

    <style name="checkBoxGreenStyle" parent="Theme.AppCompat.DayNight">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/gray3</item>
    </style>

   <style name="checkBoxGreenStyle1" parent="Theme.AppCompat.DayNight">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/gray3</item>
        <item name="background">@color/green_light</item>
    </style>

    <style name="primaryBtnStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/round_corner_primary_fill</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
    </style>


    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="MyRadioButton2" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/gray6</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/cairo</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
