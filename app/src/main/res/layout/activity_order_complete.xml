<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    tools:context=".Activities.OrderCompleteActivity">
    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/_16sdp"
        android:layout_height="match_parent">


    <com.ramez.shopp.SpichalViews.STextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="@string/payment_success"
        android:layout_height="wrap_content"/>
    <com.ramez.shopp.SpichalViews.STextViewBold
        android:id="@+id/orderIDTv"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textColor="@color/green1"
        android:layout_marginBottom="@dimen/_10sdp"
        android:text="OD004093"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/ic_tick"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:layout_height="@dimen/_100sdp"/>
    <com.ramez.shopp.SpichalViews.STextViewBold
        android:layout_width="match_parent"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:text="@string/order_confirmed"
        android:layout_height="wrap_content"/>

    <com.ramez.shopp.SpichalViews.STextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_16sdp"
        android:text="@string/order_note"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:padding="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/round_corner_grey"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/ic_tick"
            android:layout_gravity="center"
            android:layout_height="@dimen/_30sdp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <com.ramez.shopp.SpichalViews.STextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="@string/will_be_deliverd"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <com.ramez.shopp.SpichalViews.STextViewBold
                    android:id="@+id/deliveryDayTv"
                    android:layout_width="wrap_content"
                    android:text="Monday"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>
                <com.ramez.shopp.SpichalViews.STextViewBold
                    android:id="@+id/deliveryTimeTv"
                    android:layout_width="wrap_content"
                    android:text="08:00 PM - 10:00 PM "
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            </LinearLayout>

    </LinearLayout>
    </LinearLayout>

</LinearLayout>