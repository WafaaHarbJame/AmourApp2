<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="@dimen/_50sdp"-->
<!--        app:barcode_text="ABC-abc-1234"-->
<!--        android:layout_marginTop="20dp"/>-->

</LinearLayout>