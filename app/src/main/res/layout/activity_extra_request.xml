<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray5"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar" />
    <include
        android:id="@+id/failGetDataLY"
        layout="@layout/layout_fail_get_data" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="@dimen/_8sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <com.ramez.shopp.SpichalViews.SEditText
                    android:id="@+id/tvProductDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:background="@drawable/rectangel_corner_border"
                    android:gravity="top"
                    android:hint="@string/details_title"
                    android:inputType="textMultiLine"
                    android:minHeight="@dimen/_120sdp"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/black" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:background="@drawable/rectangel_corner_border"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/addImage"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:src="@drawable/add_photo_support" />

                    <com.ramez.shopp.SpichalViews.STextView
                        android:id="@+id/addImageTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:text="@string/add_photo" />

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:text="@string/know_price" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/_4sdp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:orientation="horizontal"
                        android:padding="@dimen/_10sdp">

                        <com.ramez.shopp.SpichalViews.STextView
                            android:id="@+id/plusCartBtn"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:textAlignment="center"
                            android:background="@drawable/round_corner_plus"
                            android:scaleX="@integer/scaleX"
                            android:gravity="center"
                            android:textSize="@dimen/_16ssp"
                            android:visibility="visible"
                            android:textStyle="bold"
                            android:text="+"
                            android:textColor="@color/white"
                            app:tint="@color/white" />

                        <com.ramez.shopp.SpichalViews.STextView
                            android:id="@+id/productCartQTY"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:minWidth="@dimen/_30sdp"
                            android:minHeight="@dimen/_30sdp"
                            android:text="1"
                            android:gravity="center"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14ssp"
                            android:visibility="visible" />


                        <TextView
                            android:id="@+id/minusCartBtn"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@drawable/round_corner_minues"
                            android:scaleX="@integer/scaleX"
                            android:textSize="@dimen/_16ssp"
                            android:gravity="center"
                            android:text="-"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            app:tint="@color/white" />

                        <ImageView
                            android:id="@+id/deleteCartBtn"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            app:srcCompat="@drawable/delete_icon" />

                    </LinearLayout>


                    <com.ramez.shopp.SpichalViews.SButton
                        android:id="@+id/addToCartBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/cart_button_style"
                        android:minWidth="@dimen/_200sdp"
                        android:text="@string/add_to_cart"
                        android:textColor="@color/white"
                        android:textStyle="bold">

                    </com.ramez.shopp.SpichalViews.SButton>
                </LinearLayout>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </LinearLayout>

</LinearLayout>