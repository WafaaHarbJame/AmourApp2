<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/back1"
                android:orientation="vertical"
                android:background="@drawable/toolbar_back1"
                android:layout_height="@dimen/_70sdp">
            </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:visibility="visible"
                    android:layout_marginTop="@dimen/_34sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <com.ramez.shopp.SpichalViews.STextView
                        android:id="@+id/location_icon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/round_corner_grey"
                        android:drawablePadding="@dimen/_8sdp"
                        android:gravity="start|center_vertical"
                        android:hint="@string/search_product"
                        android:maxLines="1"
                        android:padding="@dimen/_10sdp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        app:drawableEndCompat="@drawable/search_product" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="@integer/scaleX"
                        android:scaleY="@integer/scaleX"
                        android:src="@drawable/cat_icon"
                        android:textSize="@dimen/_18ssp" />

                </LinearLayout>
                 <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/catRecycler"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                     android:layout_marginTop="@dimen/_85sdp"
                     tools:itemCount="3"
                     app:spanCount="3"
                     tools:listitem="@layout/row_category"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </FrameLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>

