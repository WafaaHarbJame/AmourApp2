<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

<!--    <FrameLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content">-->
<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:id="@+id/back1"-->
<!--            android:orientation="vertical"-->
<!--            android:background="@drawable/toolbar_back1"-->
<!--            android:layout_height="@dimen/_70sdp"/>-->

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/back1"
                android:orientation="vertical"
                android:background="@drawable/toolbar_back1"
                android:layout_height="@dimen/_70sdp">
            </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:visibility="visible"
                        android:layout_marginTop="@dimen/_34sdp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <com.ramez.ramez.SpichalViews.STextView
                            android:id="@+id/location_icon"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/round_corner_grey"
                            android:drawablePadding="@dimen/_8sdp"
                            android:gravity="start|center_vertical"
                            android:hint="@string/search_product"
                            android:maxLines="1"
                            android:padding="@dimen/_10sdp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp"
                            app:drawableEndCompat="@drawable/search_product" />


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleX="@integer/scaleX"
                            android:scaleY="@integer/scaleX"
                            android:src="@drawable/cat_icon"
                            android:textSize="@dimen/_18ssp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <com.ramez.ramez.SpichalViews.STextViewBold
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/_8sdp"
                            android:gravity="start|center_vertical"
                            android:text="@string/best_products"
                            android:maxLines="1"
                            android:padding="@dimen/_10sdp"
                            android:textAlignment="viewStart"
                            android:textSize="@dimen/_12ssp" />

                        <com.ramez.ramez.SpichalViews.STextView
                            android:id="@+id/moreBestBut"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/_8sdp"
                            android:gravity="start|center_vertical"
                            android:text="@string/view_all"
                            android:maxLines="1"
                            android:padding="@dimen/_10sdp"
                            android:textAlignment="viewStart"
                            android:textSize="@dimen/_12ssp" />

                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/bestProductRecycler"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <com.ramez.ramez.SpichalViews.STextViewBold
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/_8sdp"
                            android:gravity="start|center_vertical"
                            android:text="@string/best_sell"
                            android:maxLines="1"
                            android:padding="@dimen/_10sdp"
                            android:textAlignment="viewStart"
                            android:textSize="@dimen/_12ssp" />

                        <com.ramez.ramez.SpichalViews.STextView
                            android:id="@+id/moreBoughtBut"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/_8sdp"
                            android:gravity="start|center_vertical"
                            android:text="@string/view_all"
                            android:maxLines="1"
                            android:padding="@dimen/_10sdp"
                            android:textAlignment="viewStart"
                            android:textSize="@dimen/_12ssp" />

                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/bestSellerRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <com.ramez.ramez.SpichalViews.STextViewBold
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/_8sdp"
                            android:gravity="start|center_vertical"
                            android:maxLines="1"
                            android:padding="@dimen/_10sdp"
                            android:text="@string/offers"
                            android:textAlignment="viewStart"
                            android:textSize="@dimen/_12ssp" />

                        <com.ramez.ramez.SpichalViews.STextView
                            android:id="@+id/moreOfferBut"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/_8sdp"
                            android:gravity="start|center_vertical"
                            android:text="@string/view_all"
                            android:maxLines="1"
                            android:padding="@dimen/_10sdp"
                            android:textAlignment="viewStart"
                            android:textSize="@dimen/_12ssp" />

                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/offerRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </FrameLayout>

        </androidx.core.widget.NestedScrollView>


</LinearLayout>

