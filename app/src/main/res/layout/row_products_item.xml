<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_6sdp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardBut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:elevation="@dimen/_4sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardUseCompatPadding="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/productImg"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_12sdp"
                    android:background="@color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/image_product" />

                <ImageView
                    android:id="@+id/favBut"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_gravity="top|start"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:src="@drawable/favorite_icon" />

            </FrameLayout>
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/productNameTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:lines="2"
            android:textAlignment="viewStart"
            android:text="@string/product_name"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardBut" />

        <TextView
            android:id="@+id/discountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/round_corner_green"
            android:gravity="center"
            android:paddingStart="@dimen/_6sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingEnd="@dimen/_6sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:text="@string/_50_off"
            android:textColor="@color/colorAppRed"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/productNameTv" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/productPriceLy"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/discountTv">

            <TextView
                android:id="@+id/productPriceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_alignParentStart="true"
                android:text="@string/_10220_aed"
                android:textColor="@color/green"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/productPriceBeforeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@id/productPriceTv"
                android:text="@string/_10220_aed"
                android:textColor="@color/gray3"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />
            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:id="@+id/CartLy"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corner_grey"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/_6sdp"
                android:paddingTop="@dimen/_6sdp"
                android:visibility="gone"
                android:layout_alignParentEnd="true"
                android:paddingBottom="@dimen/_6sdp"
                android:layout_alignParentTop="true"
                android:paddingEnd="@dimen/_6sdp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/plusCartBtn"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:minWidth="@dimen/_10sdp"
                    android:minHeight="@dimen/_10sdp"
                    android:visibility="visible"
                    app:srcCompat="@drawable/plus" />

                <TextView
                    android:id="@+id/productCartQTY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_8ssp"
                    android:gravity="center"
                    android:minWidth="@dimen/_15sdp"
                    android:minHeight="@dimen/_15sdp"
                    android:text="1"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="visible" />


                <ImageView
                    android:id="@+id/minusCartBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8ssp"
                    android:minWidth="@dimen/_10sdp"
                    android:minHeight="@dimen/_10sdp"
                    android:visibility="visible"
                    app:srcCompat="@drawable/minues" />

                <ImageView
                    android:id="@+id/deleteCartBtn"
                    android:layout_marginStart="@dimen/_8ssp"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:minWidth="@dimen/_10sdp"
                    android:minHeight="@dimen/_10sdp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/delete_icon" />
            </LinearLayout>

            <ImageView
                android:id="@+id/cartBut"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:visibility="visible"
                android:layout_alignParentEnd="true"
                android:src="@drawable/cart_icon" />
        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

