<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tool_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="@dimen/_40sdp"
            android:padding="@dimen/_5sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:scaleX="@integer/scaleXInv"
            android:src="@drawable/back_icon"
            android:visibility="visible"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/mainSearchBtn"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:padding="@dimen/_13sdp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_search_t" />

        <ImageView
            android:id="@+id/addExtra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="@dimen/_40sdp"
            android:padding="@dimen/_5sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:scaleX="@integer/scaleXInv"
            android:src="@drawable/plus_toolbar"
            android:visibility="gone"
            tools:targetApi="m" />

        <ImageView
            android:id="@+id/logoImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="@dimen/_160sdp"
            android:maxLines="1"
            android:src="@drawable/toolbar_logo"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            android:visibility="visible"
            android:contentDescription="@string/app_name" />

        <com.ramez.shopp.SpichalViews.STextViewBold
            android:id="@+id/mainTitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="@dimen/_160sdp"
            android:maxLines="1"
            android:src="@drawable/toolbar_logo"
            android:text="@string/change_city_branch"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            android:visibility="gone" />



        <ImageView
            android:id="@+id/deleteBut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:minHeight="@dimen/_40sdp"
            android:padding="@dimen/_5sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:src="@drawable/delete_toolbar"
            android:textSize="@dimen/_13ssp"
            android:visibility="gone"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/sortBut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/view2But"
            android:gravity="center"
            android:minHeight="@dimen/_40sdp"
            android:src="@drawable/sort_icon"
            android:textSize="@dimen/_13ssp"
            android:visibility="gone"
            android:contentDescription="@string/app_name" />


        <ImageView
            android:id="@+id/view2But"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:minHeight="@dimen/_40sdp"
            android:padding="@dimen/_5sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:src="@drawable/filter_view_white"
            android:textSize="@dimen/_13ssp"
            android:visibility="gone"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/SearchBtn"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:padding="@dimen/_13sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_search_t"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>

</LinearLayout>