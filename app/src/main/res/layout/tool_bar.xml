<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tool_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbarBack"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:minHeight="@dimen/_40sdp"
            android:padding="@dimen/_5sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:scaleX="@integer/scaleX"
            android:src="@drawable/ic_angle_left"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/mainSearchBtn"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:padding="@dimen/_13sdp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_search_t" />

        <ImageView
            android:id="@+id/addExtra"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:minHeight="@dimen/_40sdp"
            android:padding="@dimen/_5sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:scaleX="@integer/scaleXInv"
            android:src="@drawable/plus_toolbar"
            android:visibility="gone"
            tools:targetApi="m" />

        <ImageView
            android:id="@+id/logoImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="@dimen/_160sdp"
            android:maxLines="1"
            android:src="@drawable/toolbar_logo"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            android:visibility="visible" />

        <com.ramez.shopp.SpichalViews.STextViewBold
            android:id="@+id/mainTitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="@dimen/_160sdp"
            android:maxLines="1"
            android:src="@drawable/toolbar_logo"
            android:text="@string/change_city_branch"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/deleteBut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:minHeight="@dimen/_40sdp"
            android:padding="@dimen/_5sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:src="@drawable/delete_toolbar"
            android:textSize="@dimen/_13ssp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/sortBut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/view2But"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:minHeight="@dimen/_40sdp"
            android:src="@drawable/sort_icon"
            android:textSize="@dimen/_13ssp"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/view2But"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:minHeight="@dimen/_40sdp"
            android:padding="@dimen/_5sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:src="@drawable/filter_view_white"
            android:textSize="@dimen/_13ssp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/SearchBtn"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_30sdp"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:padding="@dimen/_13sdp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_search_t" />

        <FrameLayout
            android:id="@+id/cartFastBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_12sdp"
            android:minWidth="@dimen/_40sdp"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/cartIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/cart_icon_bottom"
                app:tint="@color/white" />

            <com.ramez.shopp.SpichalViews.STextView
                android:id="@+id/cartsCountTv"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/_9sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:background="@drawable/circle_corner_primary"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/red3"
                android:textSize="@dimen/_6ssp" />

        </FrameLayout>

    </RelativeLayout>

</LinearLayout>