<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/moreBut"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_4sdp"
        android:gravity="center"
        android:background="@drawable/cart_back_style"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/moreIcon"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:gravity="center"
            android:layout_gravity="center"
            android:minHeight="@dimen/_40sdp"
            android:background="@drawable/counter_back_style"
            android:padding="@dimen/_5sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:scaleX="@integer/scaleXInv"
            android:src="@drawable/ic_back"
            android:visibility="visible" />

        <com.amour.shop.SpichalViews.STextViewBold
            android:id="@+id/moreLb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="@dimen/_6sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingEnd="@dimen/_6sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:text="@string/discover_more"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_10ssp" />

    </LinearLayout>

</RelativeLayout>