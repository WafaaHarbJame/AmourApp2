                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="@integer/scaleX"
                    android:text="@string/fal_angle_right"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18ssp" />

