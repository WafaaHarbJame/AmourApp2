<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:clipToPadding="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_4sdp"
        app:cardElevation="@dimen/_8sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/cardBack"
            android:background="@drawable/round_card_white"
            android:paddingStart="@dimen/_4sdp"
            android:paddingEnd="@dimen/_4sdp"
            android:layout_height="wrap_content">

            <com.daimajia.swipe.SwipeLayout
                android:id="@+id/swipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:cardBackgroundColor="@color/white"
                app:leftEdgeSwipeOffset="0dp"
                app:rightEdgeSwipeOffset="0dp">

                <LinearLayout
                    android:id="@+id/bottom_wrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryDark"
                    android:orientation="horizontal"
                    android:tag="Bottom1">

                    <ImageView
                        android:id="@+id/deleteBut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:gravity="center"
                        android:padding="@dimen/_2sdp"
                        app:srcCompat="@drawable/delete_toolbar"
                        app:tint="@color/white" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/imageView1"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_margin="4dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/holder_image"
                            app:riv_corner_radius="@dimen/_16sdp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingTop="@dimen/_4sdp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <com.ramez.shopp.SpichalViews.STextViewBold
                                        android:id="@+id/tvName"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:maxLines="2"
                                        android:text="اسم المنتج"
                                        android:textAlignment="viewStart"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_10ssp"
                                        tools:ignore="NestedWeights" />

                                    <ImageView
                                        android:id="@+id/markTv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="@dimen/_8sdp"
                                        android:src="@drawable/remark_icon" />

                                </LinearLayout>

                            </LinearLayout>

                            <com.ramez.shopp.SpichalViews.STextView
                                android:id="@+id/weight_unitTv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_4sdp"
                                android:maxLines="2"
                                android:text="@string/pieces"
                                android:textAlignment="viewStart"
                                android:textSize="@dimen/_10ssp" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"

                                android:paddingBottom="@dimen/_8sdp">

                                <com.ramez.shopp.SpichalViews.STextViewBold
                                    android:id="@+id/priceTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="end|center"
                                    android:lines="1"
                                    android:text="35555"
                                    android:textColor="@color/green1"
                                    android:textSize="@dimen/_11ssp" />

                                <com.ramez.shopp.SpichalViews.STextViewBold
                                    android:id="@+id/currencyPriceTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:gravity="end|center"
                                    android:lines="1"
                                    android:text="BHD"
                                    android:textColor="@color/green"
                                    android:textSize="@dimen/_11ssp" />

                                <com.ramez.shopp.SpichalViews.STextView
                                    android:id="@+id/productPriceBeforeTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_4sdp"
                                    android:gravity="end|center"
                                    android:lines="1"
                                    android:text="35555"
                                    android:textColor="@color/gray3"
                                    android:textSize="@dimen/_11ssp" />

                                <Space
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_8sdp"
                                    android:layout_marginEnd="@dimen/_8sdp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <com.ramez.shopp.SpichalViews.STextView
                                        android:id="@+id/plusCartBtn"
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:textAlignment="center"
                                        android:background="@drawable/round_corner_green_fill"
                                        android:scaleX="@integer/scaleX"
                                        android:gravity="center"
                                        android:textSize="@dimen/_16ssp"
                                        android:visibility="visible"
                                        android:textStyle="bold"
                                        android:text="+"
                                        android:minWidth="@dimen/_30sdp"
                                        android:minHeight="@dimen/_30sdp"
                                        android:textColor="@color/green"
                                        app:tint="@color/white" />

                                    <com.ramez.shopp.SpichalViews.STextView
                                        android:id="@+id/productCartQTY"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:background="@drawable/round_corner_green_strock_fill"
                                        android:gravity="center"
                                        android:minWidth="@dimen/_30sdp"
                                        android:minHeight="@dimen/_30sdp"
                                        android:text="1"
                                        android:textAllCaps="false"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_10ssp"
                                        android:visibility="visible" />




                                    <TextView
                                        android:id="@+id/minusCartBtn"
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:background="@drawable/round_corner_green_fill_right"
                                        android:scaleX="@integer/scaleX"
                                        android:textSize="@dimen/_16ssp"
                                        android:gravity="center"
                                        android:text="-"
                                        android:layout_marginEnd="@dimen/_8ssp"
                                        android:textAlignment="center"
                                        android:textColor="@color/green"
                                        android:textStyle="bold"
                                        app:tint="@color/white" />

                                    <ImageView
                                        android:id="@+id/deleteCartBtn"
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:minWidth="@dimen/_30sdp"
                                        android:minHeight="@dimen/_30sdp"
                                        android:padding="@dimen/_8sdp"
                                        android:scaleX="@integer/scaleX"
                                        android:background="@drawable/round_corner_green_fill_right"
                                        android:visibility="gone"
                                        app:srcCompat="@drawable/delete_icon" />

                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </com.daimajia.swipe.SwipeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>

