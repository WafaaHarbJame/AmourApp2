<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/failGetDataLY"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray5"
    android:gravity="center"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_13sdp"
        android:focusable="true">

        <ImageView
            android:layout_width="@dimen/_85sdp"
            android:id="@+id/noInternetIv"
            android:visibility="gone"
            android:layout_height="@dimen/_85sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:srcCompat="@drawable/no_connection" />

        <com.amour.shop.SpichalViews.STextView
            android:id="@+id/failTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fail_to_get_data"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp" />


        <LinearLayout
            android:id="@+id/refreshBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp">

            <com.amour.shop.SpichalViews.STextViewIcon
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fa_refresh"
                android:textColor="@color/black"
                android:textSize="@dimen/_16ssp" />

            <com.amour.shop.SpichalViews.STextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="@string/reload"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

