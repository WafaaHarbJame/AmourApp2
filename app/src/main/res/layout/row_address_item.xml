<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <com.ramez.shopp.SpichalViews.SRadioButton
            android:id="@+id/rbSelectAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:paddingEnd="@dimen/_5sdp"
            android:text=""
            android:textAlignment="viewStart"
            android:theme="@style/MyRadioButton" />

        <com.ramez.shopp.SpichalViews.STextView
            android:id="@+id/tvaAddressTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Talal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/_16sdp"
        android:orientation="horizontal">

        <com.ramez.shopp.SpichalViews.STextView
            android:id="@+id/tvAddressNote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="960,21,2923,,,,,BH"
            android:textAlignment="viewStart" />

        <ImageView
            android:id="@+id/deleteAddressBut"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/delete_icon" />
    </LinearLayout>

    <com.ramez.shopp.SpichalViews.STextView
        android:id="@+id/tvAddressMark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:text="Ph : 33310488"
        android:textAlignment="viewStart" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d8d8d8" />

</LinearLayout>

