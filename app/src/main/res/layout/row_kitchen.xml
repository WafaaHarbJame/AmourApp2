<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_3sdp"
    android:paddingStart="@dimen/_3sdp"
    android:paddingTop="@dimen/_3sdp"
    android:paddingEnd="@dimen/_3sdp"
    android:paddingBottom="@dimen/_4sdp"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"

        android:layout_gravity="center"
        android:layout_height="@dimen/_100sdp">

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/loadingLY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:visibility="gone"
            app:indicatorColor="@color/colorPrimary"
            app:indicatorName="BallClipRotateMultipleIndicator" />


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/kitchenImg"
            android:layout_width="@dimen/_132sdp"
            android:layout_height="@dimen/_100sdp"
            android:scaleType="fitXY"
            android:src="@drawable/holder_image"
            app:riv_corner_radius="@dimen/_10sdp" />
        <View
            android:layout_width="@dimen/_132sdp"
            android:layout_height="@dimen/_100sdp"
            android:background="@drawable/shadow_00" />
        <com.ramez.shopp.SpichalViews.STextView
            android:id="@+id/titleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text="wssssss"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />

    </FrameLayout>
</LinearLayout>



