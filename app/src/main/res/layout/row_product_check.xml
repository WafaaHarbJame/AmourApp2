<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.ramez.shopp.SpichalViews.SRadioButton
            android:id="@+id/selectTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:textAlignment="viewStart"
            android:theme="@style/MyRadioButton2" />


        <com.ramez.shopp.SpichalViews.STextView
            android:id="@+id/productCheckTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:layout_marginEnd="5dp"
            android:text="@string/product_not_found_1"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:textColor="@color/colorLoginText" />




    </LinearLayout>

</RelativeLayout>