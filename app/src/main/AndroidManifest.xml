    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name=".RootApplication"
        android:allowBackup="false"
        android:hardwareAccelerated="true"
        android:icon="@drawable/splash_logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:allowBackup">
        <activity android:name=".Activities.DeepLinksActivity"   android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" >
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="ramezonline.com"
                    android:scheme="https" />

                <data
                    android:host="ramezonline.com"
                    android:scheme="http" />
                <data
                    android:host="product"
                    android:scheme="ramez" />
                <data
                    android:host="search"
                    android:scheme="ramez" />
                <data
                    android:host="booklet"
                    android:scheme="ramez" />
                <data
                    android:host="category"
                    android:scheme="ramez" />

            </intent-filter>

            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="shop.xadok.com"
                    android:scheme="https" />
            </intent-filter>

            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "http://www.example.com/gizmos” -->
                <data
                    android:host="shop.xadok.com"
                    android:pathPrefix="/*"
                    android:scheme="https" />
                <!-- note that the leading "/" is required for pathPrefix-->
            </intent-filter>


        </activity>
        <activity
            android:name=".Activities.RamezKitchenActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
